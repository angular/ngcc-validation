{
  "extends": [
    "schedule:nonOfficeHours"
  ],
  "masterIssue": true,
  "semanticCommits": true,
  "semanticCommitType": "build",
  "separateMajorMinor": false,
  "prHourlyLimit": 2,
  "timezone": "America/Tijuana",
  "packageRules": [
    {
      "managers": ["npm"],
      "updateTypes": ["digest"],
      "enabled": false
    },
    {
      "packagePatterns": [
        "^@angular.*"
      ],
      "groupName": "angular"
    },
    {
      "packageNames": [
        "typescript"
      ],
      "separateMinorPatch": true
    },
    {
      "packageNames": [
        "typescript"
      ],
      "updateTypes": [
        "minor",
        "major"
      ],
      "masterIssueApproval": true
    }
  ]
}
